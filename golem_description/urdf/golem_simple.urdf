    </joint>

    <joint name="motor2" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_l1"/>
        <origin xyz="0.35 -0.30 0.03" rpy="0 0 0"/>
        <limit effort="0.1" velocity="0.01"/>
        <axis xyz="0 1 0"/>
    </joint>

